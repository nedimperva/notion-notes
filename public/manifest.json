{
  "name": "Thought Base",
  "short_name": "ThoughtBase",
  "description": "A note-taking app that syncs with Notion",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#ff8a65",
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  "scope": "/",
  "orientation": "portrait",
  "categories": ["productivity", "utilities", "notes"],
  "screenshots": [
    {
      "src": "/screenshots/light-mode.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Light Mode"
    },
    {
      "src": "/screenshots/dark-mode.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Dark Mode"
    },
    {
      "src": "/screenshots/mobile-view.png",
      "sizes": "720x1280",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile View"
    }
  ],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "New Note",
      "short_name": "New",
      "url": "/?new=true",
      "description": "Create a new note",
      "icons": [
        {
          "src": "/icons/icon-96x96.png", 
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "enctype": "multipart/form-data",
    "method": "POST",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "capture_links": "existing-client-navigate",
  "lang": "en-US",
  "dir": "ltr",
  "iarc_rating_id": "",
  "related_applications": []
}